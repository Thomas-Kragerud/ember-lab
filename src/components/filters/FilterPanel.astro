---
interface Props {
  id?: string;
  classes?: string;
}

const { id = "filter-panel", classes = "" } = Astro.props;
---

<div 
  id={id} 
  class={`bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 border border-gray-200 dark:border-gray-700 transform origin-top scale-y-0 h-0 opacity-0 transition-all duration-300 overflow-hidden ${classes}`}
>
  <div class="grid md:grid-cols-2 gap-4">
    <slot name="filters" />
  </div>
  
  <div class="mt-4 flex justify-end">
    <slot name="actions">
      <button id="reset-filters" class="px-3 py-1.5 bg-emerald-50 hover:bg-emerald-100 dark:bg-emerald-900/30 dark:hover:bg-emerald-900/50 text-emerald-700 dark:text-emerald-300 rounded-lg transition-colors text-sm font-medium">
        Reset
      </button>
    </slot>
  </div>
</div>