---
// NewsViewer.astro
import { getCollection } from 'astro:content';
import { render } from 'astro:content';

// Get all news posts
const allNewsPosts = await getCollection('news');

// Process and render each post
const renderedPosts = await Promise.all(
  allNewsPosts.map(async (post) => {
    // Render the content
    const { Content } = await render(post);
    
    return {
      slug: post.slug,
      title: post.data.title || '',
      date: post.data.date ? new Date(post.data.date) : new Date(),
      summary: post.data.summary || '',
      Content
    };
  })
);

// Sort by date (newest first)
const sortedPosts = renderedPosts.sort((a, b) => b.date.getTime() - a.date.getTime());
---

<!-- Modal container -->
<dialog id="news-modal" class="w-full max-w-4xl max-h-[90vh] p-0 bg-white dark:bg-gray-800 rounded-xl shadow-xl overflow-auto">
  <!-- Close button -->
  <div class="sticky top-0 z-10 flex justify-end p-4 bg-white dark:bg-gray-800 bg-opacity-90 dark:bg-opacity-90 backdrop-blur-sm">
    <button id="close-modal-btn" class="text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-gray-100">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
  
  <!-- Content container -->
  <div class="p-6 pt-0">
    {sortedPosts.map(post => (
      <div id={`news-content-${post.slug}`} class="news-content hidden">
        <h2 class="text-3xl font-bold mb-2 text-gray-900 dark:text-white">{post.title}</h2>
        <p class="text-sm text-gray-600 dark:text-gray-300 mb-6">
          {post.date.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'})}
        </p>
        <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:text-emberBlue-700 dark:prose-headings:text-emberBlue-300 prose-a:text-emberGreen-600 dark:prose-a:text-emberGreen-300 prose-a:no-underline hover:prose-a:text-emberGreen-500 prose-strong:text-emberBlue-600 dark:prose-strong:text-emberBlue-400 prose-hr:border-emberGray-300 dark:prose-hr:border-emberGray-700 prose-ol:list-decimal prose-ul:list-disc prose-li:marker:text-emberBlue-500 dark:prose-li:marker:text-emberBlue-400 prose-img:rounded-lg prose-img:shadow-md">
          <post.Content />
        </div>
      </div>
    ))}
  </div>
</dialog>
